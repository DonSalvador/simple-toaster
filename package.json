{
  "name": "simple-toaster",
  "version": "1.0.0",
  "description": "Simple toaster - an elegant and simple notification for javascript, with no dependencies",
  "main": "./dist/simple-toaster.js",
  "styles": "./dist/simple-toaster.css",
  "scripts": {
    "build-sass": "node-sass src/simple-toaster.sass dist/simple-toaster.min.css --output-style=compressed",
    "build-js": "babel src/simple-toaster.js --out-file dist/simple-toaster.min.js --presets=es2015,babili",
    "build": "yarn run build-sass && yarn run build-js"
  },
  "author": "Salvatore Duran",
  "keywords": [
    "javascript",
    "notification",
    "toaster",
    "toast"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaredreich/notie/issues"
  },
  "homepage": "https://jaredreich.com/notie",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-es2015": "^6.24.1",
    "node-sass": "^4.5.3"
  }
}
